{
    "compilerOptions": {
        "target": "es5",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "inlineSourceMap": true,
        "typeRoots": [
            "./node_modules/@types"
        ],
        "outDir": "./dist",
        "declaration": true,
        "declarationDir": "./types",
        "lib": [
            "es6",
            "dom"
        ],
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "experimentalDecorators": true
    },
    "include": [
        "./src/**/*.ts"
    ]
}
